<CounterScreen>:
    name: 'counter_screen'

    MDBoxLayout:
        id: main_box
        orientation: 'vertical'
        adaptive_height: True
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        spacing: dp(40)
        padding: dp(10)

        MDFillRoundFlatIconButton:
            text: 'Count'
            icon: 'plus'
            font_size: sp(30)
            pos_hint: {'center_x': 0.5}
            on_release: root.increase_count()

        MDLabel:
            text: root.count
            halign: 'center'
            font_size: sp(60)
            size_hint_y: None
            pos_hint: {'center_x': 0.5}
            height: self.texture_size[1]

        MDFillRoundFlatIconButton:
            text: 'Count'
            icon: 'minus'
            font_size: sp(30)
            on_release: root.decrease_count()
            pos_hint: {'center_x': 0.5}

    MDFillRoundFlatIconButton:
        icon: 'restart'
        text: 'RESET'
        pos_hint: {'center_x': 0.5}
        top: main_box.y - dp(15)
        font_size: sp(30)
        on_release: root.reset_count_zero()

    MDIconButton:
        icon: 'information-outline'
        pos_hint: {'right': 1, 'top': 1}
        on_release: app.change_root_screen('info')
